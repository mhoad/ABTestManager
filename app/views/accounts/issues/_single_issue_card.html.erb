<%= link_to "#", class: "issue-card" do %>
  <div class="issue-card__align-top">
    <div class="issue-card__align-start">
      <%= raw(status_icon(:in_progress)) %>
      <div class="issue-card__title">
        <%= issue.title %>
      </div>
      
    </div>
    <div class="issue-card__align-end">
      <div class="issue-card__actions">
        <div class="issue-card__watchers">
          <svg class="issue-card__icon" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          0
        </div>

        <div class="issue-card__comments">
          <svg class="issue-card__icon" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          3
        </div>

        <div class="issue-card__hypotheses">
          <svg class="issue-card__icon" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          5
        </div>

        <div class="issue-card__share">
          <svg class="issue-card__icon" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="issue-card__align-bottom">
    <div class="issue-card__align-start">
      <div class="issue-card__site-area">Sitewide</div>
    </div>
    <div class="issue-card__align-end">
      <div class="<%= priority_class(issue.priority) %>"><%= issue.priority.capitalize %></div>
    </div>
    
  </div>
<% end %>